---
import { Button } from "@/components/ui/button";
import LinkedIn from "@/components/icons/LinkedIn";
import GitHub from "@/components/icons/GitHub";
import Mail from "@/components/icons/Mail";
---

<footer class="border-t border-white/10 bg-[#0f0f10] py-12 text-white">
  <div class="container mx-auto flex flex-col items-center justify-between gap-4 px-4 md:flex-row">
    <!-- Nombre a la izquierda -->
    <div class="text-xl font-bold">Fabrizzio Zambrano</div>

    <!-- Texto al centro -->
    <div class="text-sm text-gray-400 text-center md:text-left">
      Desarrollado con Astro por Fabrizzio Zambrano
    </div>

    <!-- Botones a la derecha -->
    <div class="flex gap-3">
      <a href="mailto:fabrizziozv.17@gmail.com">
        <Button size="icon" variant="neutral" className="bg-yellow-400 hover:bg-yellow-300 border-black">
          <Mail className="h-5 w-5 text-black" />
        </Button>
      </a>

      <a href="https://www.linkedin.com/in/fabrizzio-zambrano-602678334/" target="_blank" rel="noopener noreferrer">
        <Button size="icon" variant="neutral" className="bg-yellow-400 hover:bg-yellow-300 border-black">
          <LinkedIn className="h-5 w-5 text-black" />
        </Button>
      </a>

      <a href="https://github.com/Fabrizzioxc" target="_blank" rel="noopener noreferrer">
        <Button size="icon" variant="neutral" className="bg-yellow-400 hover:bg-yellow-300 border-black">
          <GitHub className="h-5 w-5 text-black" />
        </Button>
      </a>
    </div>
  </div>
</footer>
